server {
  listen   <%= node[:pirum][:port] %>;
  server_name  <%= node[:pirum][:hostname] %>;

  access_log  <%= node[:nginx][:log_dir] %>/<%= node[:pirum][:hostname] %>.access.log;
  error_log  <%= node[:nginx][:log_dir] %>/<%= node[:pirum][:hostname] %>.error.log;

  location / {
    root   <%= node[:pirum][:webroot] %><%= node[:pirum][:hostname] %>;
    index  index.html index.htm;
  }
}
